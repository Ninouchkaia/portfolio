#!/usr/bin/python
# -*- coding: utf-8 -*-
import os
import sys
import re
from commands import getoutput # permet d'obtenir l'output d'une commande bash.

liste = open("/home/nina/scripts/paxdb/abundance_datasets/%s" % sys.argv[1])
#for example : 'datasets.txt'
datasets_list = liste.readlines()
liste.close()

for dataset in datasets_list :
	dataset = dataset.replace('\n', '') # remove '\n' only
	print dataset
	file_write = open("/string_id/%s_string_id.txt" % dataset,'w+')
	dataset_open = open("%s" % dataset)
	read_dataset = dataset_open.readlines()
	for line in read_dataset[9:] :
		line = line.split("\t")
		file_write.write("%s\n" % line[1])
	dataset_open.close()
	file_write.close()
	